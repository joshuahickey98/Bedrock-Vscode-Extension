{
  "name": "my-bedrock",
  "displayName": "my-bedrock",
  "description": "aws bedrock vscode extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:bedrock.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bedrock.start",
        "title": "AWS Bedrock Chat"
      }
    ],
    "configuration": {
      "title": "AWS Bedrock",
      "properties": {
        "bedrock.region": {
          "type": "string",
          "default": "us-east-1",
          "description": "AWS region for Bedrock API"
        },
        "bedrock.modelId": {
          "type": "string",
          "default": "anthropic.claude-3-5-sonnet-20241022-v2:0",
          "description": "Bedrock model ID to use"
        },
        "bedrock.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum tokens for response"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.705.0"
  }
}
